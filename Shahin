mebleg=int(input("Qoyacaginiz meblegi AZN-le daxil edin:"))
if mebleg>=500:
    muddet=int(input("Muddeti ay olaraq yazin: "))
    if muddet == 12:
        umumifaiz_geliri = mebleg * 0.06
    elif muddet == 18:
        umumifaiz_geliri = mebleg * 0.065
    elif muddet == 24:
        umumifaiz_geliri = mebleg * 0.07
    elif muddet == 36:
        umumifaiz_geliri = mebleg * 0.075
    print("Umumi faiz geliri :", umumifaiz_geliri)
if mebleg <=0:
    print("Meblegi duzgun daxil edin")
elif mebleg <500:
    print("Minimal mebleg 500 AZN-dir")
